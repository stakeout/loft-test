.loftblog-courses
	&__header
		text-align: center
	&__title
		color #212121
		font-family: $base-font
		font-size 42px
		font-weight 500
		line-height 28px
	&__subtitle
		color #727272
		font-family: $base-font
		font-size 21px
		font-weight 300
		line-height 28px
	&__course-wrapper
		font-size: 0

.course
	display: inline-block
	vertical-align: top
	width: 300px
	margin-right: 20px
	margin-bottom: 23px
	padding: 0 20px
	&:nth-child(3n)
		margin-right: 0
	&__img-wrap
		max-height: 170px
		margin-left: -20px
		&_java-script
			sprite $js
		&_jquery
			sprite $jq
		&_page-elems
			sprite $elems
		&_adaptive
			sprite $adaptive
		&_button-generator
			sprite $button
		&_adaptive-gallery
			sprite $gallery
	&__title
		color #212121
		font-family: $base-font
		font-size 21px
		font-weight 400
		line-height 24px
	&__description
		color #727272
		font-family: $base-font
		font-size 14px
		font-weight 300
		line-height 21px
	&__duration
		color #b6b6b6
		font-family: $base-font
		font-size 14px
		font-weight: 300
		line-height 21px
s


.input-box
	color #727272
	font-family: $base-font
	font-size 18px
	font-weight 400
	line-height 28px
	&__checkbox
		display: none
