.logo
	width 400px
	clearfix()
	&__image-wrap
		float: left
		width: 60px
		height: 60px
		margin-right: 20px
		border-radius: 50%
		border: 1px solid #fff
		overflow: hidden
	&__author-name
		float: left
		padding-top: 7px
		font-family: $base-font
		color: #fff
		font-size: 21px
		font-weight: 500
		line-height: 28px
	&__email
		float:left
		margin-top: -6px
		opacity 0.7
		color #fff
		font-family: $base-font
		font-size 14px
		font-weight 400
		line-height 28px
	&_header
		float left

