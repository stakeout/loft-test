.page-footer
	position: absolute
	bottom: 0
	height: $footer-height
	width: 100%
	background-color: #212121
	box-shadow: 0 6px 6px rgba(0, 0, 0, 0.2)
	display: block
	&__inner
		padding-top: 16px
	&__some-text
		opacity: 0.5
		color: #fff
		font-family: $base-font
		font-size: 14px
		font-weight: 400
		line-height: 21px
		text-align: center
